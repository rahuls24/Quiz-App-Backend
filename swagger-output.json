              ],
              "xml": {
                "name": "main"
              }
            }
          },
          "404": {
            "description": "When user is not present in db.",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "fail"
                },
                "error": {
                  "type": "string",
                  "example": "No user found in DB."
                }
              },
              "required": [
                "status",
                "error"
              ],
              "xml": {
                "name": "main"
              }
            }
          }
        },
        "security": [
          {
            "apiKeyAuth": []
          }
        ]
      }
    },
